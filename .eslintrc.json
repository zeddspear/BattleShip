{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
        {
            "files": [ "src/**/*.js" ],
            "rules": {
              "quotes": [ 2, "single" ]
            }
          }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent":["error",2],
        "linebreak-style":["error","unix"],
        "quotes":["error","single"],
        "semi":["error","always"],
        "no-console":"warn"
    }
}
